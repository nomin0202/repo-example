{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
      "react/prop-types": "off",  // prop-types 경고 끄기 (옵션)
      "react/react-in-jsx-scope": "off"  // JSX를 사용할 때 React import 경고 끄기 (React 17 이상에서는 필요 없음)
    }
  }
  